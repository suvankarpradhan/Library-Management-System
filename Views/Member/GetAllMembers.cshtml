@model IEnumerable<Library_Management_System.Models.MemberRecord>

@{
    ViewBag.Title = "GetAllMembers";
}
<div class="container">
    <div class="alert alert-success alert-dismissible fade in">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!</strong> Table Updated Successfully.
    </div>
</div>
<div class="list-inline pull-right">
    <a class="btn btn-success" href="~/Member/Create" role="button">Add New Member</a>
    <a class="btn btn-warning" href="~/Transaction/Index" role="button">Back</a>
</div>
<h2>All Members</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.mem_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mem_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mem_email)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.mem_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mem_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mem_email)
            </td>
            <td>
                <a onclick="getMemBerDetail(@item.mem_id)" class="btn btn-info" role="button">Detail</a>
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-primary" href="~/Member/Edit?id=@item.mem_id" role="button">Edit</a>
                    <a class="btn btn-danger" href="~/Member/Delete?id=@item.mem_id" role="button">Delete</a>
                }
            </td>
        </tr>
    }

</table>

<div id="memDetail" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Member Detail</h4>
            </div>
            <div class="modal-body">
                <p id="meminfo"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>