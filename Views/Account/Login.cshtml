@model Library_Management_System.Models.EmployeeRecord

@{
    ViewBag.Title = "Login";
}

<h1 style="color:white">Login</h1>

<div class="container">
    <div class="col-md-6 login">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { style = "color:white" })

                <div class="form-group">
                    @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "control-label col-md-2 loginLabel" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.username, "", new { style = "color:white" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.emp_pass, htmlAttributes: new { @class = "control-label col-md-2 loginLabel" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.emp_pass, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.emp_pass, "", new { @class = "text-danger" })<br />
                        <input type="checkbox" onclick="showPassword()"> Show Password
                    </div>
                </div>

                <div class="form-group text-">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script>
    document.getElementById("bodyImg").style.backgroundImage = "url('/Content/images/login.jpg')";
</script>
