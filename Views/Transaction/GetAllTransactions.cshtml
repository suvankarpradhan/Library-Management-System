@model IEnumerable<Library_Management_System.Models.TransactionRecord>

@{
    ViewBag.Title = "GetAllTransactions";
}
<div class="container">
    <div class="alert alert-success alert-dismissible fade in">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!</strong> Table Updated Successfully.
    </div>
</div>
<div class="list-inline pull-right">
    <a class="btn btn-success" href="~/Transaction/Create" role="button">Add Record</a>
    <a class="btn btn-warning" href="~/Transaction/Index" role="button">Back</a>
</div>
<h2>All Transactions</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.trans_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.emp_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mem_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.issue_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.return_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.last_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.penalty)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.trans_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.emp_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.book_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.book_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mem_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.issue_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.return_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.last_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.penalty)
            </td>
            <td>
                <a class="btn btn-info" href="~/Transaction/Edit?id=@item.trans_id" role="button">Edit</a>
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-danger" href="~/Transaction/Delete?id=@item.trans_id" role="button">Delete</a>
                }
            </td>
        </tr>
    }

</table>
