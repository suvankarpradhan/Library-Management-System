            @Html.ValidationMessageFor(model => model.emp_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.mem_id, htmlAttributes: new { @class = "control-label col-md-2" })
