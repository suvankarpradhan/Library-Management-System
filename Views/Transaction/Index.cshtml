
@{
    ViewBag.Title = "Index";
}

<h1>SUV LIBRARY</h1>

<div class="container">
    <div class="col-md-6">
        <div class="controlField">
            <a href="~/Transaction/Create" class="btn btn-warning" role="button">Create New Record</a>
        </div>
        <div class="controlField">
            <a href="~/Transaction/GetAllTransactions" class="btn btn-info" role="button">See All Transaction Records</a>
        </div>
        <div class="controlField">
            <a href="~/Member/Create" class="btn btn-success" role="button">Create New Member Records</a>
        </div>
        <div class="controlField" style="padding-bottom:20px">
            <a href="~/Book/GetAllBooks" class="btn btn-danger" role="button">See All Books Record</a>
        </div>
    </div>
    <div class="col-md-6">
        <div class="transactionIndex">
            @using (Html.BeginForm("Edit", "Transaction", FormMethod.Get))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal searchField">
                    <div class="form-group">
                        <div class="col-md-12 form-inline">
                            @Html.TextBox("id", "", htmlAttributes: new { @class = "form-control", Type = "number", Min = "0", Placeholder = "Enter Transaction Id", onclick = "editBtn()" })
                            <span id="tId" style="color:red"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="hidden" id="edit" value="Edit" class="btn btn-default" />
                            <input type="button" value="Quick Search" class="btn btn-default" onclick="search()" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="col-md-offset-4 col-md-6">
    <table id="detail" class="table searchTable">
        <thead></thead>
        <tbody style="color:white"></tbody>
    </table>
</div>

<script>
    document.getElementById("bodyImg").style.backgroundImage = "url('/Content/images/transactionIndex.jpg')";
</script>