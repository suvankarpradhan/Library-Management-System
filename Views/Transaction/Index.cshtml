
@{
    ViewBag.Title = "Index";
}

<h2>SUV LIBRARY</h2>

@using (Html.BeginForm("Details", "Transaction", FormMethod.Get,htmlAttributes:new { onsubmit = "return searchForm()"}))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.Label("Enter Transaction id :",htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("id", "",htmlAttributes: new { @class = "form-control",Type="number" })<span id="tId" style="color:red"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Create new Record", "Create")
</div>

