@model IEnumerable<Library_Management_System.Models.EmployeeRecord>

@{
    ViewBag.Title = "GetAllEmployees";
}
<div class="container">
    <div class="alert alert-success alert-dismissible fade in">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!</strong> Table Updated Successfully.
    </div>
</div>
<div class="list-inline pull-right">
    <a class="btn btn-success" href="~/Employee/Create" role="button">Create New</a>
    <a class="btn btn-warning" href="~/Transaction/Index" role="button">Back</a>
</div>
<h2>All Employees</h2>

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.emp_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.emp_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.emp_email)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.emp_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.emp_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.emp_email)
            </td>
            <td>
                <a class="btn btn-primary" href="~/Employee/Edit?id=@item.emp_id" role="button">Edit</a>
                <a onclick="getEmployeeDetail(@item.emp_id)" class="btn btn-info" role="button">Detail</a>
                <a class="btn btn-danger" href="~/Employee/Delete?id=@item.emp_id" role="button">Delete</a>
            </td>
        </tr>
    }

</table>

<div id="empDetail" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Employee Detail</h4>
            </div>
            <div class="modal-body">
                <p id="empinfo"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
