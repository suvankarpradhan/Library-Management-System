<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SUV Library</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body id="bodyImg" class="bg">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SUV LIBRARY", "Index", "Home", new { @class = "navbar-brand",Style="color:white" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Dashboard", "Index", "Transaction")</li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown">
                                See Records
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                @if (User.IsInRole("Admin"))
                                {
                                    <li>@Html.ActionLink("Employees Detail", "GetAllEmployees", "Employee")</li>
                                }
                                <li>@Html.ActionLink("Members Detail", "GetAllMembers", "Member")</li>
                                <li>@Html.ActionLink("Books Record Detail", "GetAllBooks", "Book")</li>
                                <li>@Html.ActionLink("Transactions Detail", "GetAllTransactions", "Transaction")</li>
                            </ul>
                        </li>
                    }
                    <li><a href="~/Home/#services">Library Services</a></li>
                    <li><a href="~/Home/#about">About</a></li>
                    <li><a href="~/Home/#contact">Contact</a></li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class=""><a id="User">Welcome - @User.Identity.Name</a></li>
                        <li class="pull-right">@Html.ActionLink("Log out", "Logout", "Account")</li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <div class="footer">
            <p class="pull-right">&copy; @DateTime.Now.Year - SUV Library</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
